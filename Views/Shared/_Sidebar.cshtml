@using Microsoft.AspNetCore.Http;
@{ 
    PortManager.Models.User user = PortManager.Models.User.GetOne((int)Context.Session.GetInt32("user_id"));
}
<aside class="col-md-2 bg-dark">
    <nav class="nav flex-column mt-5 text-light">
        @if (user.Type == "Trader")
        {
            <a class="nav-link" href="/Trader">Ships</a>
            <a class="nav-link" href="/Item">Items</a>
            <a class="nav-link" href="/Trader/CustomDuties">Custom Duties</a>
            <a class="nav-link" href="/Trader/Settings">Settings</a>
        }
        else
        {
            <a class="nav-link active" aria-current="page" href="/Admin">Users</a>
            <a class="nav-link" href="/Admin/Ships">Ships</a>
            <a class="nav-link" href="/Admin/CustomDuties">Custom Duties</a>
            <a class="nav-link" href="/Admin/Settings">Settings</a>
        }
    </nav>
</aside>