@{
    ViewData["Title"] = "Manage Custom Duties";
    ViewData["sidebar"] = true;
}

<div class="container">
    <div id="controls" class="my-3 p-3">
        <div class="d-flex list justify-content-center">
            <button class="btn btn-success">Create New Custom Duty</button>
        </div>
        <div class="row g-2 justify-content-center">
            <div class="col-md">
                <div class="form-floating">
                    <select class="form-select" id="filterByStatus" aria-label="Type">
                        <option selected>All</option>
                        <option value="0">Paid</option>
                        <option value="1">Unpaid</option>
                        <option value="2">Ship Docked</option>
                        <option value="2">Ship Not Docked</option>
                    </select>
                    <label for="filterByType">Select Status</label>
                </div>
            </div>

            <div class="col-md">
                <div class="form-floating">
                    <input type="text" id="filterBy" class="form-control" />
                    <label for="filterBy">Filter by ship name, ship HIN, or trader name</label>
                </div>
            </div>

            <div class="col-md">
                <div class="form-floating">
                    <select class="form-select" id="sortBySelect" aria-label="Sort By">
                        <option value="0" selected>Ship Name</option>
                        <option value="1">Ship HIN</option>
                        <option value="1">Trader Name</option>
                        <option value="1">Custom Duty</option>
                        <option value="2">Updated At</option>
                        <option value="3">Created At</option>
                    </select>
                    <label for="sortBySelect">Sort By</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>

        @foreach (var duty in (List<CustomDuty>)ViewData["duties"])
        {
            Ship ship = PortManager.Models.Ship.GetShip(duty.ship_id);

            <div class="col-sm-10 mb-2">
                <div class="card @(duty.Amount == 0 ? "border border-success" : "")">
                    <div class="card-body">
                        <h5 class="card-title">@duty.Amount.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-PK")) <small class="text-secondary">@ship.NickName</small> @if(duty.Status == "Unpaid") {
                            <span class="badge bg-warning float-end">Unpaid</span>
                        }</h5>
                        <p class="card-text">Due by @duty.DueDate.ToLongDateString() | @PortManager.Models.User.GetUser(ship.trader_id).FullName</p>
                         <a href="#" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-info">Mark as Paid</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }

        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </nav>
    </div>
</div>