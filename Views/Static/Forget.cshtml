@{
    ViewData["Title"] = "Gawadar Port";
}

<div class="bg-dark row justify-content-center"
     style="background-image: url(images/port-lights.jpg); background-size: cover;">
    <div class="col-sm-4" style="margin: 10rem 0;">
        <div class="card" style="background-color: #FFFFFFAA; backdrop-filter: blur(3px);">
            <div class="card-body">
                <h5 class="card-title">Forget Password</h5>

                <form action="User/ForgetForm" method="POST">
                    <div class="mb3">
                        <label>Enter Your Registered Email Address</label>
                        <input type="email" name="email" class="form-control" placeholder="Email" />
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
