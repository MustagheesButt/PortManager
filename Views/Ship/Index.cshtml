@{
    ViewData["sidebar"] = true;
}

@using PortManager.Models;

<div class="container">
    <div id="controls" class="my-3 p-3">
        <div class="d-flex list justify-content-center">
            <a href="/Ship/Add" class="btn btn-success">Add New Ship</a>
        </div>
        <div class="row g-2 justify-content-center">
            <div class="col-md">
                <div class="form-floating">
                    <select class="form-select" id="filterByStatus" aria-label="Type">
                        <option selected>All</option>
                        <option value="0">Custom Duty Paid</option>
                        <option value="1">Custom Duty Unpaid</option>
                        <option value="2">Docked</option>
                        <option value="2">Not Docked</option>
                    </select>
                    <label for="filterByType">Select Status</label>
                </div>
            </div>

            <div class="col-md">
                <div class="form-floating">
                    <input type="text" id="filterBy" class="form-control" />
                    <label for="filterBy">Filter by name, HIN, or trader name</label>
                </div>
            </div>

            <div class="col-md">
                <div class="form-floating">
                    <select class="form-select" id="sortBySelect" aria-label="Sort By">
                        <option value="0" selected>Name</option>
                        <option value="1">HIN</option>
                        <option value="1">Trader Name</option>
                        <option value="1">Custom Duty</option>
                        <option value="2">Updated At</option>
                        <option value="3">Created At</option>
                    </select>
                    <label for="sortBySelect">Sort By</label>
                </div>
            </div>
        </div>
    </div>

    <partial name="_Ships" />
</div>

<script src="~/js/pagination.js"></script>